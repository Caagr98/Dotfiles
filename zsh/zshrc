trim() {
	awk '
	{
		len = 0
		out = ""
		for(i = 1; i <= length($0) && len < '$1'; i++) {
			ch = substr($0, i, 1)
			if(ch == "\x1b") {
				end = index(substr($0, i), "m")
				if(end > 0) {
					out = out substr($0, i, end)
					i += end - 1
				}
			} else {
				out = out ch
				len++
			}
		}
		print out
	}
	'
}

