#{{{1 CNF
command_not_found_handler() {
	python /usr/lib/command-not-found $1
	exit 127
}

#{{{1 Color
#{{{2 Man
export LESS_TERMCAP_mb=$(printf "$fg[red]")
export LESS_TERMCAP_md=$(printf "$fg[blue]")
export LESS_TERMCAP_us=$(printf "$fg[green]")
export LESS_TERMCAP_so=$(printf "")
export LESS_TERMCAP_me=$(printf "$reset_color")
export LESS_TERMCAP_se=$(printf "$reset_color")
export LESS_TERMCAP_ue=$(printf "$reset_color")

#{{{2 Maven
mvn() {
	=mvn $@ | sed \
		-e "s/^\[INFO]/${fg[blue]}${bold_color}[INFO]${reset_color}/" \
		-e "s/^\[WARNING]/${fg[yellow]}${bold_color}[WARNING]${reset_color}/" \
		-e "s/^\[ERROR]/${fg[red]}${bold_color}[ERROR]${reset_color}/"
}

#{{{2 ls
ls() {
	if [[ -t 1 ]]; then
		=ls -F -x --color --group-directories-first $@
	else
		=ls -F $@
	fi
}
#{{{1 Ctrl-Z
ctrlz() {
	[[ $(jobs | wc -l) > 0 ]] && zle push-line && BUFFER="fg" && zle accept-line
}
zle -N ctrlz
bindkey "^Z" ctrlz

